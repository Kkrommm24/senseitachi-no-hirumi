generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  avatar   String?
  favorites Favorite[]
  comments  Comment[]
  favoriteTags UserFavoriteTag[]
}

model Food {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  images      String[]
  price       Float
  ingredients FoodIngredient[]
  flavors     FoodFlavor[]
  favorites   Favorite[]
  comments    Comment[]
  foodRestaurant FoodRestaurant[]
  foodTag     FoodTag[]
}

model Ingredient {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  foodIngredients FoodIngredient[]
}

model FoodIngredient {
  id           Int       @id @default(autoincrement())
  foodId       Int
  ingredientId Int
  food         Food      @relation(fields: [foodId], references: [id])
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
}

model Flavor {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  foodFlavors FoodFlavor[]
}

model FoodFlavor {
  id       Int   @id @default(autoincrement())
  foodId   Int
  flavorId Int
  food     Food  @relation(fields: [foodId], references: [id])
  flavor   Flavor @relation(fields: [flavorId], references: [id])
}

model Tag {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  foodTags FoodTag[]
  userFavoriteTags UserFavoriteTag[] 
}

model Favorite {
  id     Int   @id @default(autoincrement())
  userId Int
  foodId Int
  user   User  @relation(fields: [userId], references: [id])
  food   Food  @relation(fields: [foodId], references: [id])
}

model UserFavoriteTag {  
  id     Int   @id @default(autoincrement())  
  userId Int  
  tagId  Int  
  user   User  @relation(fields: [userId], references: [id])  
  tag    Tag   @relation(fields: [tagId], references: [id])  
}

model Comment {
  id        Int       @id @default(autoincrement())
  userId    Int
  foodId    Int
  content    String
  createdAt DateTime  @default(now())
  editAt    DateTime? @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  food      Food      @relation(fields: [foodId], references: [id])
}

model Restaurant {
  id          Int             @id @default(autoincrement())
  name        String
  address     String
  image       String?
  longitude   Float
  latitude    Float
  foodRestaurant FoodRestaurant[]
}

model FoodRestaurant {
  id           Int       @id @default(autoincrement())
  foodId      Int
  restaurantId Int
  food        Food      @relation(fields: [foodId], references: [id])
  restaurant  Restaurant @relation(fields: [restaurantId], references: [id])
}

model FoodTag {
  id     Int   @id @default(autoincrement())
  foodId Int
  tagId  Int
  food   Food @relation(fields: [foodId], references: [id])
  tag    Tag  @relation(fields: [tagId], references: [id])
}
